{
  "name": "plugin-template",
  "description": "GitHub Actions TypeScript template",
  "version": "0.0.0",
  "author": "Ubiquity DAO",
  "license": "MIT",
  "engines": {
    "node": ">=20.10.0"
  },
  "homepage": "https://github.com/actions/typescript-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "bugs": {
    "url": "https://github.com/actions/typescript-action/issues"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "scripts": {
    "pre-commit": "run-s format:write test package",
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "format:lint": "npx eslint . -c ./.github/linters/.eslintrc.yml --fix",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "_test": "npx jest",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package",
    "prepare": "husky",
    "_": "_",
    "_start": "tsx build/esbuild-server.ts",
    "_build": "tsx build/esbuild-build.ts",
    "format": "run-s format:lint format:prettier format:cspell",
    "format:cspell": "cspell **/*",
    "test": "jest --setupFiles dotenv/config --coverage",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "knip": "knip --config .github/knip.ts",
    "knip-ci": "knip --no-exit-code --reporter json --config .github/knip.ts",
    "worker": "wrangler dev --env dev --port 4000"
  },
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov",
      "clover"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ],
    "roots": [
      "./tests"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "mocks"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./test-results/jest",
          "outputName": "results.xml"
        }
      ],
      "jest-md-dashboard"
    ],
    "coverageDirectory": "coverage"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "dotenv": "^16.4.4",
    "@octokit/rest": "20.1.1",
    "@octokit/webhooks": "13.2.7",
    "@sinclair/typebox": "0.32.33",
    "@ubiquity-dao/ubiquibot-logger": "^1.3.0",
    "typebox-validators": "0.3.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@cspell/dict-node": "^4.0.3",
    "@cspell/dict-software-terms": "^3.3.18",
    "@cspell/dict-typescript": "^3.1.2",
    "@mswjs/data": "0.16.1",
    "cspell": "^8.4.0",
    "cypress": "13.6.6",
    "esbuild": "^0.20.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-filename-rules": "^1.3.1",
    "eslint-plugin-sonarjs": "^0.24.0",
    "jest-junit": "^16.0.0",
    "jest-md-dashboard": "0.8.0",
    "knip": "^5.0.1",
    "lint-staged": "^15.2.2",
    "tsx": "^4.7.1",
    "@eslint/js": "9.5.0",
    "eslint-plugin-check-file": "2.8.0",
    "wrangler": "3.60.3"
  },
  "keywords": [
    "typescript",
    "template",
    "dao",
    "ubiquity",
    "open-source"
  ],
  "lint-staged": {
    "*.ts": [
      "yarn prettier --write",
      "eslint --fix"
    ],
    "src/**.{ts,json}": [
      "cspell"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}